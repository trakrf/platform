{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "dockerBuildArgs": {
      "VITE_SENTRY_DSN": "${{ VITE_SENTRY_DSN }}"
    }
  },
  "deploy": {
    "startCommand": "/server",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
